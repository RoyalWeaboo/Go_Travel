<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_contact_us"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Us"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/btnBack"
            app:layout_constraintTop_toTopOf="@+id/btnBack"
            tools:layout_editor_absoluteX="314dp" />

        <ImageView
            android:id="@+id/btn_whatsapp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_contact_us" />

        <TextView
            android:id="@+id/tv_whatsapp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter"
            android:text="WhatsApp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/btn_whatsapp"
            app:layout_constraintStart_toStartOf="@+id/btn_whatsapp"
            app:layout_constraintTop_toTopOf="@+id/btn_whatsapp" />

        <TextView
            android:id="@+id/edt_old_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="130dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/inter"
            android:text="+62 8123384476"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_whatsapp"
            app:layout_constraintEnd_toEndOf="@+id/btn_whatsapp"
            app:layout_constraintStart_toEndOf="@+id/tv_whatsapp"
            app:layout_constraintTop_toTopOf="@+id/btn_whatsapp" />

        <ImageView
            android:id="@+id/btn_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_whatsapp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter"
            android:text="Email"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/btn_email"
            app:layout_constraintStart_toStartOf="@+id/btn_email"
            app:layout_constraintTop_toTopOf="@+id/btn_email" />

        <TextView
            android:id="@+id/edt_new_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/inter"
            android:text="cs@gotravel.co.id"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_email"
            app:layout_constraintEnd_toEndOf="@+id/btn_email"
            app:layout_constraintStart_toStartOf="@+id/edt_old_password"
            app:layout_constraintTop_toTopOf="@+id/btn_email" />

        <ImageView
            android:id="@+id/btn_instagram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_email" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter"
            android:text="Instagram"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/btn_instagram"
            app:layout_constraintStart_toStartOf="@+id/btn_instagram"
            app:layout_constraintTop_toTopOf="@+id/btn_instagram" />

        <TextView
            android:id="@+id/edt_confirm_password"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/inter"
            android:text="gotravel.id"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_instagram"
            app:layout_constraintEnd_toEndOf="@+id/btn_instagram"
            app:layout_constraintStart_toStartOf="@+id/edt_new_password"
            app:layout_constraintTop_toTopOf="@+id/btn_instagram" />

        <ImageView
            android:id="@+id/btn_facebook"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:src="@drawable/bg_edittext"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btn_instagram" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter"
            android:text="Facebook"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="@+id/btn_facebook"
            app:layout_constraintStart_toStartOf="@+id/btn_facebook"
            app:layout_constraintTop_toTopOf="@+id/btn_facebook" />

        <TextView
            android:id="@+id/tv_sdasd"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/inter"
            android:text="GoTravel"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_facebook"
            app:layout_constraintEnd_toEndOf="@+id/btn_facebook"
            app:layout_constraintStart_toStartOf="@+id/edt_confirm_password"
            app:layout_constraintTop_toTopOf="@+id/btn_facebook" />


</androidx.constraintlayout.widget.ConstraintLayout>