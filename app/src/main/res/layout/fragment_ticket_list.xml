<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D000000">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="-4dp"
        android:src="@drawable/blue_cloud_bg" />

    <ImageView
        android:id="@+id/ticket_list_arrow_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/arrow_back" />



    <LinearLayout
        android:id="@+id/flight_information_1"
        android:layout_below="@id/ticket_list_arrow_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="8dp"
            app:strokeColor="#AAAAAA"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/fromCity"
                style="@style/normalText18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:fontFamily="@font/inter_bold"
                android:text="Jakarta" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="8dp"
            app:strokeColor="#AAAAAA"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/toCity"
                android:paddingStart="8dp"
                android:layout_margin="8dp"
                style="@style/normalText18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Bali" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/flight_information_2"
        android:layout_below="@id/flight_information_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/departureDateCard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="8dp"
            app:strokeColor="#AAAAAA"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/departureDateText"
                android:layout_margin="8dp"
                style="@style/normalText18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Nov 23, 2022" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/returnDateCard"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="8dp"
            app:strokeColor="#AAAAAA"
            app:strokeWidth="1dp">

            <TextView
                android:id="@+id/returnDateText"
                android:layout_margin="8dp"
                style="@style/normalText18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_bold"
                android:text="Nov 30, 2022" />

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/flight_information_2"
        android:id="@+id/linearPassenger">
        <TextView
            android:id="@+id/passenger_info"
            style="@style/normalText16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_information_2"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="Passenger :" />

        <TextView
            style="@style/normalText16"
            android:id="@+id/adultTotalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_information_2"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="1 Adult"/>

        <TextView
            style="@style/normalText16"
            android:id="@+id/childTotalCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/flight_information_2"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/inter_bold"
            android:text="0 Children"/>
    </LinearLayout>



    <LinearLayout
        android:visibility="gone"
        android:id="@+id/round_flight_opt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearPassenger"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            style="@style/normalText16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter"
            android:text="1. Departure Flight" />

        <TextView
            style="@style/normalText16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/inter"
            android:text="2. Return Flight" />

        <ImageView
            android:id="@+id/filter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/filter_icon" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_ticket_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/round_flight_opt"
        android:layout_marginTop="16dp" />

</RelativeLayout>