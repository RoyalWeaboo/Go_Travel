<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        android:layout_marginTop="-4dp"
        android:src="@drawable/wishlist_bg" />

    <ImageView
        android:id="@+id/wishlist_arrow_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/arrow_back" />

    <TextView
        android:id="@+id/tv_wishlist"
        style="@style/normalText24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wishlist_arrow_back"
        android:layout_marginStart="32dp"
        android:fontFamily="@font/inter_bold"
        android:text="WISHLIST" />

    <LinearLayout
        android:id="@+id/wishlist_opt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_wishlist"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_one_way"
                style="@style/normalText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="One-Way Trip" />

            <ImageView
                android:id="@+id/line_option_one_way"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_option" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/menu_round_trip"
                style="@style/normalText16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Round Trip" />

            <ImageView
                android:id="@+id/line_option_round_trip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/line_option"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/filter_one_way"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/wishlist_opt"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:src="@drawable/filter_icon" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_wishlist_one_way"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/filter_one_way"
        android:layout_marginTop="16dp" />


</RelativeLayout>